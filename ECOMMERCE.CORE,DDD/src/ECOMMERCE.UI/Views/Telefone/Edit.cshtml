@model Domain.Entities.Contatos.Telefone

@{
    ViewData["Title"] = "Editar Telefone";
}

<h2>Editar Telefone</h2>

<h4>Telefone</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TelefoneId" />
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneTipoId" class="control-label"></label>
                <select asp-for="TelefoneTipoId" class="form-control" asp-items="ViewBag.TelefoneTipoId"></select>
                <span asp-validation-for="TelefoneTipoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />|
                <a class="btn btn-primary" asp-action="Index">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
