@model IEnumerable<Domain.Entities.Contatos.Telefone>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefoneTipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefoneTipo.Descricao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TelefoneId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TelefoneId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TelefoneId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
