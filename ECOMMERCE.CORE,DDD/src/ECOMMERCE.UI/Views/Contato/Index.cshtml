@model IEnumerable<Domain.Entities.Contatos.Contato>

@{
    ViewData["Title"] = "Cadastro de Contato";
}

<h2>Cadastro de Contato</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pessoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email.EnderecoEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco.Bairro)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.ContatoId">Editar</a> |
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.ContatoId">Detalhes</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ContatoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
