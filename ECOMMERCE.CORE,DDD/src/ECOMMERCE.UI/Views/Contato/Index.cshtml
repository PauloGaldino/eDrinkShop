@model IEnumerable<Domain.Entities.Contatos.Contato>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pessoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pessoa.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email.EnderecoEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco.Bairro)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ContatoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ContatoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ContatoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
