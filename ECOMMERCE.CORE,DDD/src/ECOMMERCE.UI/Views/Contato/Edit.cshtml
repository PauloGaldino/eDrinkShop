@model Domain.Entities.Contatos.Contato

@{
    ViewData["Title"] = "Editar o Cadastro de Contatos";
}

<h2>Editar o Cadastro de Contatos</h2>

<h4>Contato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContatoId" />
            <div class="form-group">
                <label asp-for="PessoaId" class="control-label"></label>
                <select asp-for="PessoaId" class="form-control" asp-items="ViewBag.PessoaId"></select>
                <span asp-validation-for="PessoaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailId" class="control-label"></label>
                <select asp-for="EmailId" class="form-control" asp-items="ViewBag.EmailId"></select>
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneId" class="control-label"></label>
                <select asp-for="TelefoneId" class="form-control" asp-items="ViewBag.TelefoneId"></select>
                <span asp-validation-for="TelefoneId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoId" class="control-label"></label>
                <select asp-for="EnderecoId" class="form-control" asp-items="ViewBag.EnderecoId"></select>
                <span asp-validation-for="EnderecoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />|
                <a class="btn btn-primary" asp-action="Index">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
