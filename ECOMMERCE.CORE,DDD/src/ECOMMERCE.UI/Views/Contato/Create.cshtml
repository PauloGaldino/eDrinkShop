@model Domain.Entities.Contatos.Contato

@{
    ViewData["Title"] = "Criar o Cadastro de Contato";
}

<h2>Criar o Cadastro de Contato</h2>

<h4>Contato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PessoaId" class="control-label"></label>
                <select asp-for="PessoaId" class ="form-control" asp-items="ViewBag.PessoaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EmailId" class="control-label"></label>
                <select asp-for="EmailId" class ="form-control" asp-items="ViewBag.EmailId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneId" class="control-label"></label>
                <select asp-for="TelefoneId" class ="form-control" asp-items="ViewBag.TelefoneId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EnderecoId" class="control-label"></label>
                <select asp-for="EnderecoId" class ="form-control" asp-items="ViewBag.EnderecoId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-success" />|
                <a class="btn btn-primary" asp-action="Index">Volta para a Lista</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
