@model Domain.Entities.Contatos.Email

@{
    ViewData["Title"] = "Editar Email";
}

<h2>Editar Email</h2>

<h4>Email</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmailId" />
            <div class="form-group">
                <label asp-for="EnderecoEmail" class="control-label"></label>
                <input asp-for="EnderecoEmail" class="form-control" />
                <span asp-validation-for="EnderecoEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />|
                <a class="btn btn-primary" asp-action="Index">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
