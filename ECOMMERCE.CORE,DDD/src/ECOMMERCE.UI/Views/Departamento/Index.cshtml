@model IEnumerable<Domain.Entities.Vendas.Departamento>

@{
    ViewData["Title"] = "Departamento";
}

<h2>Departamento</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.DepartamentoId">Editar</a> |
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.DepartamentoId">Detalhes</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.DepartamentoId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
